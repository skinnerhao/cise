{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "strict": false,
    "esModuleInterop": true
  },
  "include": ["src", "scripts"],
  "exclude": ["node_modules", "dist"]
}

